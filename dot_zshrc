# Aliases
alias ox='just --justfile ~/Documents/code/ox-cli/justfile'

alias ls="eza -lhgbH --git"
alias la="eza -lahgbH --git"

alias cat="bat"
alias diff="icdiff"

alias yless="jless --yaml"

alias be="bundle exec"

alias gs='git status '
alias ga='git add '
#alias gb='git branch '
alias gc='git commit -v'
alias gd='git diff'
#alias gco='git checkout '
#alias gk='gitk --all&'
#alias gx='gitx --all'
alias gl='git log --oneline'
alias glr='git log --oneline --reverse'
#alias gh='git hist'
alias gap='git add -p '
alias gan='git add --intent-to-add '
alias gce='git commit -m "empty commit" --allow-empty'
alias gf='git fetch'
alias gpr='git pull --rebase'
#alias gp='git push '
alias glp='git log -p '
alias glu='git log -p @{u}'
alias gdu='git diff @{u}'
alias grhu='git reset --hard @{u}'

# Exports
export VISUAL=nvim
export EDITOR="$VISUAL"
# simplify neovim setup commands (from "Modern Vim" book)
export VIMCONFIG=~/.config/nvim
export VIMDATA=~/.local/share/nvim
export FZF_DEFAULT_COMMAND="rg --files"

export PATH="/usr/local/heroku/bin:$PATH"
# Because Python :/
export PATH="/usr/local/opt/python@3.10/libexec/bin:$PATH"

# Start up Starship prompt customization
eval "$(starship init zsh)"

# Autocomplete
eval "$(brew shellenv)"
fpath=($HOMEBREW_PREFIX/share/zsh/site-functions $fpath)
autoload -Uz compinit && compinit
eval "$(just --completions zsh)"

# fzf
source <(fzf --zsh)

echo "eval \"\$(/opt/local/bin/mise activate bash)\"" >> ~/.zshrc
. "$HOME/.local/bin/env"

